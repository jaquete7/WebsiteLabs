
@{
    ViewBag.Title = "Membresia";
    Layout = "~/Views/Shared/Layouts/DashboardAdmin.cshtml";
}



<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Costo por Membresia</h3>
                <p class="text-subtitle text-muted">..</p>
            </div>
        </div>
    </div>

    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Actualiza el precio por membresia</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">

                            <form class="needs-validation" novalidate action="#">
                              
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Precio actual</h6>
                                        <div class="input-control">
                                            <input type="text" id="txtCurrentMembresia" class="form-control" readonly value="$000" >
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <h6>Actualizar precio</h6>
                                        <div class="input-control">
                                            <input type="text" id="txtMembresia" class="form-control" placeholder="Actualizar precio" required>
                                        </div>
                                    </div>
                                    <div class="col-md-2 mt-30">
                                        <button class="theme-btn-1 btn reverse-color btn-block" id="btnEditar" type="submit">Actualizar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Assets/Scripts/ValidarMembresia.js"></script>