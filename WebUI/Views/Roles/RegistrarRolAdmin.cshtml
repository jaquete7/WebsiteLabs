
@{
    ViewBag.Title = "Registrar rol";
    Layout = "~/Views/Shared/Layouts/DashboardAdmin.cshtml";
}


<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Registrar Rol</h3>
                <p class="text-subtitle text-muted">..</p>
            </div>
        </div>
    </div>

    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Completa los datos</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">

                            <form class="needs-validation" novalidate action="#">
                                <h6>Información</h6>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="input-item input-item-name ">
                                            <input type="text" name="ltn__name" class="form-control" placeholder="Nombre del rol" id="nombre-rol" aria-describedby="inputGroupPrepend" required>
                                        </div>
                                    </div>
                                </div>
                                <h6 class="mb-20">Selecciona los permisos disponibles para este rol</h6>
                                <div class="row mb-20">
                                    <div class="col-md-4">
                                        <div class="input-item input-item-name mb-10">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio"
                                                        id="crear-roles">
                                                <label class="form-check-label form-label"
                                                       for="crear-roles">
                                                    Permitir acceso a la manipulacion y creacion de roles
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="input-item input-item-name mb-10">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio"
                                                        id="crear-usuarios">
                                                <label class="form-check-label form-label"
                                                       for="crear-usuarios">
                                                    Permitir acceso a la manipulacion y creacion de otros usuarios
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="input-item input-item-name mb-10">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio"
                                                        id="ver-vitacora">
                                                <label class="form-check-label form-label"
                                                       for="ver-vitacora">
                                                    Permitir visualizacion de vitacora
                                                </label>
                                            </div>
                                        </div>
                                    </div>
      
                                    <div class="col-md-4">
                                        <div class="input-item input-item-name mb-20">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio"
                                                       id="ver-ganancias">
                                                <label class="form-check-label form-label"
                                                       for="ver-ganancias">
                                                    Permitir visualizacion de ganancias
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="input-item input-item-name mb-20">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio"
                                                        id="ver-data-sistema">
                                                <label class="form-check-label form-label"
                                                       for="ver-data-sistema">
                                                    Permitir acceso a la manipulacion de valores del sistema
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="btn-wrapper d-grid gap-2 col-6 mx-auto">
                                    <button id="guardar-rol" class="theme-btn-1 btn reverse-color btn-block" type="submit">Registrar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Assets/Scripts/ValidarRoles.js"></script>