@{
    ViewBag.Title = "Registrar sedes";
    Layout = "~/Views/Shared/Layouts/DashboardProveedor.cshtml";
}
<link href="~/Assets/css/RegistroPaciente.css" rel="stylesheet" />
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Registrar Sedes</h3>
                <p class="text-subtitle text-muted">..</p>
            </div>
        </div>
    </div>

    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Completa los datos</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div id="form" class="ltn__checkout-single-content-info">

                                <form class="needs-validation" novalidate action="#">
                                    <h6>Nombre de la sede</h6>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="input-control">
                                                <input type="text" name="ltn__name" class="form-control" id="txtNombre" aria-describedby="inputGroupPrepend" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <h6>Provincia</h6>
                                            <div class="input-control">
                                                <input type="text" id="txtProvincia" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <h6>Cantón</h6>
                                            <div class="input-control">
                                                <input type="text" id="txtCanton" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <h6>Distrito</h6>
                                            <div class="input-control">
                                                <input type="text" id="txtDistrito" class="form-control" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <h6>Dirección Exacta</h6>
                                        <div class="input-control">
                                            <textarea name="ltn__message" class="form-control" rows="5" id="txtDireccion" aria-describedby="inputGroupPrepend" required></textarea>
                                        </div>
                                    </div>
                                    <div class="btn-wrapper">
                                        <button class="theme-btn-1 btn reverse-color btn-block" type="submit">Registrar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="~/Assets/Scripts/ValidarSede.js"></script>