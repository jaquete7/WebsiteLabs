
@{
    ViewBag.Title = "ReAgendarCita";
    Layout = "~/Views/Shared/Layouts/DashboardPaciente.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Citas Agendadas</h3>
                <p class="text-subtitle text-muted">..</p>
            </div>
        </div>
    </div>

    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Citas agendadas, seleccione la cita que desea Re-agendar, posteriormente asigne la nueva fecha y hora deseada.</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">

                            <div class="table-responsive">
                                <table id="tbl_CitasAgendadas" class="display" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Código de cita</th>
                                            <th>Código del exámen</th>
                                            <th>Exámen</th>
                                            <th>Fecha</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                            <div class="row ">
                                <div class="col-md-4" style="margin-top:25px;">
                                    <i class="fas fa-stethoscope"></i>
                                    <span>Exámen seleccionado</span>
                                    <div class="input-control">
                                        <input type="text" name="ltn__name" class="form-control" id="txtNombreExamen" aria-describedby="inputGroupPrepend" required>
                                        <input type="hidden" id="hdnId_examen" />
                                    </div>
                                </div>
                                <div class="col-md-4" style="margin-top:25px;">
                                    <i class="fas fa-calendar-week"></i>
                                    <span>Fecha y Hora</span>
                                    <div class="input-control">
                                        <input class="form-control" type="datetime-local" id="fechaHora" placeholder="Seleccione la fecha y hora" required />
                                    </div>
                                </div>

                            </div>
                            <div class="btn-wrapper d-grid gap-2 col-2 mx-auto">
                                <button class="theme-btn-1 btn reverse-color btn-block" type="submit" id="btn_Reagendar">Re-Agendar</button>
                            </div>
                            <div class="btn-wrapper d-grid gap-2 col-2 mx-auto" id="qrcode">

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Assets/Scripts/ListarCitasAgendadas.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://npmcdn.com/flatpickr/dist/flatpickr.min.js"></script>
<script src="https://npmcdn.com/flatpickr/dist/l10n/es.js"></script>
<script src="https://cdn.rawgit.com/davidshimjs/qrcodejs/gh-pages/qrcode.min.js"></script>
<script>
    config = config = {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        altInput: true,
        altFormat: "F j, Y (h:S K)",
        locale: 'es'
    }
    flatpickr("#fechaHora", config);

</script>