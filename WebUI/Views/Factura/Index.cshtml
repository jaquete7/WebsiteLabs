
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts/_LayoutPublic.cshtml";
}


<div class="body-wrapper print-content">

    <div class="ltn__checkout-area mb-105">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ltn__checkout-single-content mt-50">
                        <h4 class="title-2">Factura NoLimits Solutions</h4>
                        <div id="form" class="ltn__checkout-single-content-info">
                            <form class="needs-validation" novalidate action="#">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Clave Numerica</h6>
                                        <div class="input-control">
                                            <input readonly type="text" name="ltn__name" class="form-control" id="txt-clave" aria-describedby="inputGroupPrepend" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Fecha</h6>
                                        <div class="input-control">
                                            <input readonly type="text" name="ltn__lastname" class="form-control" id="txt-fecha" aria-describedby="inputGroupPrepend" required>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <h6>Detalle</h6>
                                        <div class="input-control">
                                            <textarea readonly style="height: 10rem" id="txt-detalle" class="form-control"></textarea>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <h6>Descuento</h6>
                                        <div class="input-control">
                                            <input readonly type="text"  class="form-control" id="txt-descuento">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <h6>Impuesto</h6>
                                        <div class="input-control">
                                            <input readonly type="text"  class="form-control" id="txt-impuesto">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <h6>Total</h6>
                                        <div class="input-control">
                                            <input readonly type="text"  class="form-control" id="txt-total">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
<script src="~/Assets/Scripts/Factura.js"></script>