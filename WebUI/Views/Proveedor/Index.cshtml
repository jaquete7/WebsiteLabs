                                        <div class="ltn__myaccount-tab-content-inner">
                                            <table id="tbl-labs" class="display" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>Nombre del laboratorio</th>
                                                        <th class="id-lab">Identificación</th>
                                                        <th>Administrar</th>
                                                        <th>Eliminar</th>
