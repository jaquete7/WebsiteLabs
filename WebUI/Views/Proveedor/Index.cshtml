                                                <thead>
                                                    <tr>
                                                        <th>Fecha de registro</th>
                                                        <th>Nombre del laboratorio</th>
                                                        <th>Administrar</th>
                                                        <th>Eliminar</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
